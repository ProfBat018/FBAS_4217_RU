@model RegisterViewModel

@{
    Layout = "_Layout";
}


@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-controller="Home" asp-action="Register" method="post">
            <h2>Create a new account.</h2>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.AccountLoginViewModel.Username" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="@Model.AccountLoginViewModel.Username">Username</label>
                <span asp-validation-for="@Model.AccountLoginViewModel.Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.AccountLoginViewModel.EmailAddress" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <label asp-for="@Model.AccountLoginViewModel.EmailAddress">Email</label>
                <span asp-validation-for="@Model.AccountLoginViewModel.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.AccountLoginViewModel.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                <label asp-for="@Model.AccountLoginViewModel.Password">Password</label>
                <span asp-validation-for="@Model.AccountLoginViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}