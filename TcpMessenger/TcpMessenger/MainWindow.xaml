<Window x:Class="TcpMessenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpMessenger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="MessageTextBox" Grid.Row="0" Grid.Column="0"/>
        <Button x:Name="SendButton" Click="SendButton_OnClick" Grid.Row="0" Grid.Column="1" Content="Send" FontSize="24"/>
        <Button Foreground="DarkRed" x:Name="ConnectButton" Click="ConnectButton_OnClick" Grid.Row="0" Grid.Column="2" Content="Connect" FontSize="14"/>
        <Button x:Name="DisconnectButton" Click="DisconnectButton_OnClick" Grid.Row="0" Grid.Column="3" Content="Disconnect" FontSize="14"/>
        <ListBox x:Name="MessageListBox" Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="2" Grid.Column="0" />

    </Grid>
</Window>
